@model List<MusicQuiz.Web.Models.Assessment.AssessmentViewModel>

@{
    ViewData["Title"] = "Assessment";
}

<h1>@ViewData["Title"]</h1>
<hr />
@if (!Model.Any())
{
    <h2 class="text-center text-red-bold">OOPS!</h2>
    <p class="text-center">It looks like you have no assessments yet. If you're expecting an assessment to be available, please contact your tutor.</p>
}
else
{
    <p class="text-center">Below are all the available assessments for you. If you're expecting a different assessment to be available, please contact your tutor.</p>

    <table class="table table-modern">
        <thead>
            <tr>
                <th>Topic</th>
                <th>Open From</th>
                <th>Open To</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var assessment in Model)
            {
                <tr>
                    <td>@assessment.TopicName</td>
                    <td>@assessment.OpenFrom.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>@assessment.OpenTo.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>
                        @if (assessment.IsCompleted)
                        {
                            <button class="btn btn-secondary" disabled>
                                <i class="fas fa-check"></i> Completed
                            </button>
                        }
                        else if (assessment.IsUnlocked)
                        {
                            <a asp-action="StartAssessment" asp-route-id="@assessment.ID" class="btn btn-success">Start</a>
                        }
                        else
                        {
                            <button class="btn btn-secondary" disabled>
                                <i class="fas fa-lock"></i> Locked
                            </button>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MusicQuiz</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" asp-append-version="true">
</head>

<body>
    <!-- Add skip link -->
    <a href="#main-content" class="skip-link">Skip to main content</a>

    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-md navbar-light border-bottom box-shadow mb-3 custom-navbar-red @(ViewData["ActiveNav"] as string == "Admin" ? "custom-navbar-admin" : "")">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/img/Queens White Logo - Landscape.png" alt="MusicQuiz Logo" style="height: 40px;">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item @(ViewData["ActiveNav"] as string == "Quiz" ? "active" : "")">
                            <a class="nav-link" asp-area="" asp-controller="Quiz" asp-action="Index">Quiz</a>
                        </li>
                        <li class="nav-item @(ViewData["ActiveNav"] as string == "Assessment" ? "active" : "")">
                            <a class="nav-link" asp-area="" asp-controller="Assessment" asp-action="Index">Assessment</a>
                        </li>
                        <li class="nav-item @(ViewData["ActiveNav"] as string == "Leaderboards" ? "active" : "")">
                            <a class="nav-link" asp-area="" asp-controller="Leaderboards" asp-action="Index">Leaderboards</a>
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item @(ViewData["ActiveNav"] as string == "Admin" ? "active" : "")">
                                <a class="nav-link admin" asp-area="" asp-controller="Admin" asp-action="Index">Admin</a>
                            </li>
                        }
                        <li class="nav-item @(ViewData["ActiveNav"] as string == "Privacy" ? "active" : "")">
                            <a class="nav-link" asp-area="" asp-controller="Privacy" asp-action="Index">Privacy</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <!-- Add id and tabindex for skip link target -->
        <main id="main-content" role="main" class="pb-3" tabindex="-1">
            @RenderBody()
        </main>
    </div>

    <div class="@(ViewData["ActiveNav"] as string == "Admin" ? "blue-bar" : "red-bar")"></div> <!-- Red bar above the footer -->

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - MusicQuiz
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/GoBack.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

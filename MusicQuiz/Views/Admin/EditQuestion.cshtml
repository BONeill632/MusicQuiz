@model MusicQuiz.Web.Models.Quiz.QuestionViewModel

@{
    ViewData["Title"] = "Edit Question";
}

<h1>Edit Question</h1>

@if (TempData["SuccessMessage"] != null)
{
    <input type="hidden" id="successMessage" value="@TempData["SuccessMessage"]" />
}

<form id="editQuestionForm" asp-action="EditQuestion" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <input type="hidden" asp-for="QuestionID" />

    <div class="form-group" style="width: 100%; max-width: 100%;">
        <label for="SelectedTopic">Topic</label>
        <select asp-for="SelectedTopic" class="form-control form-select" asp-items="@(new SelectList(Enum.GetValues(typeof(MusicQuiz.Core.Enums.Topic))))" autocomplete="off">
            <option value="">Select a topic</option>
        </select>
        <span asp-validation-for="SelectedTopic" class="text-danger"></span>
    </div>
    <div class="form-group" style="width: 100%; max-width: 100%;">
        <label for="SelectedDifficulty">Difficulty</label>
        <select asp-for="SelectedDifficulty" class="form-control form-select" asp-items="@(new SelectList(Enum.GetValues(typeof(MusicQuiz.Core.Enums.DifficultyLevel))))" autocomplete="off">
            <option value="">Select a difficulty</option>
        </select>
        <span asp-validation-for="SelectedDifficulty" class="text-danger"></span>
    </div>
    <div class="form-group" style="width: 100%; max-width: 100%;">
        <label asp-for="Question"></label>
        <input asp-for="Question" class="form-control" placeholder="Question" autocomplete="off" aria-describedby="Question-error" />
        <span asp-validation-for="Question" class="text-danger" id="Question-error"></span>
    </div>
    <div class="form-group" style="width: 100%; max-width: 100%;">
        <label asp-for="MusicQuestionFilePath" id="musicQuestionLabel">Music Path</label>
        <select asp-for="MusicQuestionFilePath" class="form-control form-select" id="MusicQuestionFilePath"
                autocomplete="off" aria-describedby="musicQuestionPathHelp">
            <option value="">Select a music file</option>
        </select>
        <small id="musicQuestionPathHelp" class="form-text text-muted">Select the primary music file for this question</small>
        <span asp-validation-for="MusicQuestionFilePath" class="text-danger"></span>
    </div>
    <div class="form-group" style="width: 100%; max-width: 100%;">
        <label asp-for="MusicReferenceFilePath" id="musicReferenceLabel">Reference Path</label>
        <select asp-for="MusicReferenceFilePath" class="form-control form-select" id="MusicReferenceFilePath"
                autocomplete="off" aria-describedby="musicReferencePathHelp">
            <option value="">Select a reference file</option>
        </select>
        <small id="musicReferencePathHelp" class="form-text text-muted">Select the reference music file</small>
        <span asp-validation-for="MusicReferenceFilePath" class="text-danger"></span>
    </div>

    <div class="form-group" style="width: 100%; max-width: 100%;">
        <label asp-for="Options.CorrectAnswer">Correct Answer</label>
        <input asp-for="Options.CorrectAnswer" class="form-control" placeholder="Correct Answer" autocomplete="off" />
        <span asp-validation-for="Options.CorrectAnswer" class="text-danger"></span>
    </div>

    <div class="form-group" style="width: 100%; max-width: 100%;">
        <label asp-for="Options.WrongAnswerOne">Wrong Answer One</label>
        <input asp-for="Options.WrongAnswerOne" class="form-control" placeholder="Wrong Answer One" autocomplete="off" />
        <span asp-validation-for="Options.WrongAnswerOne" class="text-danger"></span>
    </div>

    <div class="form-group" style="width: 100%; max-width: 100%;">
        <label asp-for="Options.WrongAnswerTwo">Wrong Answer Two</label>
        <input asp-for="Options.WrongAnswerTwo" class="form-control" placeholder="Wrong Answer Two" autocomplete="off" />
        <span asp-validation-for="Options.WrongAnswerTwo" class="text-danger"></span>
    </div>

    <div class="form-group mb-3" style="width: 100%; max-width: 100%;">
        <label asp-for="Options.WrongAnswerThree">Wrong Answer Three</label>
        <input asp-for="Options.WrongAnswerThree" class="form-control" placeholder="Wrong Answer Three" autocomplete="off" />
        <span asp-validation-for="Options.WrongAnswerThree" class="text-danger"></span>
    </div>

    <div class="d-flex flex-column align-items-center" style="width: 100%;">
        <button type="submit" class="btn btn-danger w-100 mb-2" style="max-width: 300px;">Save Changes</button>
        <a asp-action="Index" class="btn btn-secondary w-100" style="max-width: 300px;">Cancel</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/EditQuestionPopUp.js"></script>
    <script src="~/js/loadMusicFiles.js"></script>
}


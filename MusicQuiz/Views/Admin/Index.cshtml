@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container py-4">
    <h1 class="mb-3 text-center">Admin Dashboard</h1>
    <p class="text-muted text-center mb-4">Welcome to the admin area. Manage users, questions, and assessments efficiently.</p>

    <h2 class="mb-3 text-center">Users</h2>
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="d-grid gap-3">
                <a asp-action="UserList" class="btn btn-danger btn-lg">Manage User Roles</a>
            </div>
        </div>
    </div>

    <hr />

    <h2 class="mb-3 text-center">Music</h2>
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="d-grid gap-3">
                <a asp-action="ManageMusicFiles" class="btn btn-danger btn-lg">Manage Music Files</a>
            </div>
        </div>
    </div>

    <hr />

    <h2 class="mb-3 text-center">Users</h2>
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="d-grid gap-3">
                <a asp-action="ViewQuestions" class="btn btn-danger btn-lg">Manage Questions</a>
            </div>
        </div>
    </div>

    <hr />

    <h2 class="mb-3 text-center">Assessments</h2>
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="d-grid gap-3">
                <a asp-action="ViewAssessments" class="btn btn-danger btn-lg">Manage Assessments</a>
            </div>
        </div>
    </div>

    <hr />

    <h2 class="mb-3 text-center">Reports</h2>
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="d-grid gap-3">
                <a asp-action="UserLogins" class="btn btn-danger btn-lg">User Logins</a>
                <a asp-action="QuizResults" class="btn btn-danger btn-lg">Quiz Results</a>
                <a asp-action="AssessmentResults" class="btn btn-danger btn-lg">Assessment Results</a>
            </div>
        </div>
    </div>
</div>

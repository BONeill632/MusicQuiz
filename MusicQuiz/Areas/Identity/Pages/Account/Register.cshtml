@page
@model MusicQuiz.Web.Areas.Identity.Pages.Account.RegisterModel

@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>
<hr />
<div class="row justify-content-center">
    <div class="col-md-8">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2 class="row justify-content-center">Create an account</h2>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style="width: 100%; max-width: 100%; margin-bottom: 1rem;">
                <label asp-for="Input.FirstName" class="form-label"></label>
                <input asp-for="Input.FirstName" class="form-control w-100 w-md-75" aria-required="true" />
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group" style="width: 100%; max-width: 100%; margin-bottom: 1rem;">
                <label asp-for="Input.LastName" class="form-label"></label>
                <input asp-for="Input.LastName" class="form-control w-100 w-md-75" aria-required="true" />
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
            <div class="form-group" style="width: 100%; max-width: 100%; margin-bottom: 1rem;">
                <label asp-for="Input.StudentID" class="form-label"></label>
                <input asp-for="Input.StudentID" class="form-control w-100 w-md-75" aria-required="true" />
                <span asp-validation-for="Input.StudentID" class="text-danger"></span>
            </div>
            <div class="form-group" style="width: 100%; max-width: 100%; margin-bottom: 1rem;">
                <label asp-for="Input.AcademicYear" class="form-label"></label>
                <select asp-for="Input.AcademicYear" class="form-select form-control w-100 w-md-75" aria-required="true">
                    @foreach (var year in Model.AcademicYearOptions)
                    {
                        <option value="@year">@year</option>
                    }
                </select>
                <span asp-validation-for="Input.AcademicYear" class="text-danger"></span>
            </div>
            <div class="form-group" style="width: 100%; max-width: 100%; margin-bottom: 1rem;">
                <label asp-for="Input.Email" class="form-label"></label>
                <input asp-for="Input.Email" class="form-control w-100 w-md-75" autocomplete="username" aria-required="true" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group" style="width: 100%; max-width: 100%; margin-bottom: 1rem;">
                <label asp-for="Input.Password" class="form-label"></label>
                <input asp-for="Input.Password" class="form-control w-100 w-md-75" autocomplete="new-password" aria-required="true" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group mb-3" style="width: 100%; max-width: 100%; margin-bottom: 1rem;">
                <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control w-100 w-md-75" autocomplete="new-password" aria-required="true" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="d-flex flex-column align-items-center" style="width: 100%;">
                <button type="submit" id="registerSubmit" class="btn btn-danger w-100 w-md-75 mb-2" style="max-width: 300px;">Register</button>
                <a href="/" class="btn btn-secondary w-100 w-md-75" style="max-width: 300px;">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
